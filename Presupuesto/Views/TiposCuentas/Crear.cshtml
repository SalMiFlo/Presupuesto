@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo De Cuenta";
}

<h1>Crear Tipo De Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas. Ejemplos: Préstamos, Tarjetas De Crédito, tce...</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}