@using Microsoft.AspNetCore.Identity;

@inject SignInManager<Usuario> signInManager

<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark" >Hola, @User.Identity.Name</span>
        </li>
        <lli class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </lli>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="usuarios" asp-action="Registro">Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="usuarios" asp-action="Login">Login</a>
        </li> 
    }
</ul>
